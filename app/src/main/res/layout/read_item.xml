<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/read_iv_title"
        android:layout_width="match_parent"
        android:layout_height="70dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/read_iv_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/big_star"
            android:background="@color/titleTab"/>

        <TextView
            android:id="@+id/read_tv_image_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="@string/app_name"
            android:textColor="@color/short_black"
            android:textSize="18sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/read_lv_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_item"
            android:orientation="vertical">

            <TextView
                android:id="@+id/read_tv_one_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="中央军委举行晋升上将军衔仪式"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/read_tv_one_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="中新社"
                android:textColor="#aaa"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/read_lv_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_item"
            android:orientation="vertical">

            <TextView
                android:id="@+id/read_tv_two_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="中央军委举行晋升上将军衔仪式"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/read_tv_two_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="中新社"
                android:textColor="#aaa"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/read_lv_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_item"
            android:orientation="vertical">

            <TextView
                android:id="@+id/read_tv_three_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="中央军委举行晋升上将军衔仪式"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/read_tv_three_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="中新社"
                android:textColor="#aaa"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/read_lv_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_item"
            android:orientation="vertical">

            <TextView
                android:id="@+id/read_tv_four_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="中央军委举行晋升上将军衔仪式"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/read_tv_four_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="中新社"
                android:textColor="#aaa"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/read_lv_five"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/shape_item"
        android:orientation="vertical">

        <TextView
            android:id="@+id/read_tv_five_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="30dp"
            android:text="中央军委举行晋升上将军衔仪式,届时国家军委主席"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/read_tv_five_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="15dp"
            android:text="中新社"
            android:textColor="#aaa"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
